<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core" >
  <Dialog id="dialog"
    title="History">
    <content>
      <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout">
        <form:content>
          <Label text="Currency"/>
          <Input value="{view>/HistoryDraft/currency}"/>
          <Label text="Asset"/>
          <Input value="{view>/HistoryDraft/asset}"/>
          <Label text="Period"/>
          <Input value="{view>/HistoryDraft/period}"/>
        </form:content>
      </form:SimpleForm>
    </content>
    <beginButton>
      <Button text="OK" press=".onOkPress"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCancelPress"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
