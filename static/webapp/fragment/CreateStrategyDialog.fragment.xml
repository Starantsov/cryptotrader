<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core" >
  <Dialog id="createStrategyDialog"
    title="Strategy">
    <content>
      <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout">
        <form:content>
          <Label text="Name"/>
          <Input value="{view>/StrategyDraft/name}"/>
        </form:content>
      </form:SimpleForm>
    </content>
    <beginButton>
      <Button text="OK" press=".onCreateStrategyDialogOk"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCreateStrategyDialogCancel"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
