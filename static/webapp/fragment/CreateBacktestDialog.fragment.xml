<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core" >
  <Dialog id="createBacktestDialog"
    title="Backtest">
    <content>
      <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout">
        <form:content>
          <Label text="Symbol from"/>
          <Input value="{view>/Draft/symbolFrom}"/>
          <Label text="Symbol to"/>
          <Input value="{view>/Draft/symbolTo}"/>
          <Label text="Period"/>
          <Input value="{view>/Draft/period}"/>
          <Label text="Length"/>
          <Input value="{view>/Draft/length}"/>
          <Label text="Balance initial"/>
          <Input value="{view>/Draft/balanceInitial}"/>
        </form:content>
      </form:SimpleForm>
    </content>
    <beginButton>
      <Button text="OK" press=".onCreateBacktestDialogOk"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCreateBacktestDialogCancel"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
