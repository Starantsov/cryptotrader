<mvc:View controllerName="fokin.crypto.controller.Strategy"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:codeeditor="sap.ui.codeeditor"
	height="100%">
	<Page title="Strategy" showNavButton="true" navButtonPress=".onNavBack">
		<content>
			<l:ResponsiveSplitter defaultPane="default">
				<l:PaneContainer>
					<l:SplitPane id="default">
						<Panel headerText="CodeEditor" height="100%">
							<codeeditor:CodeEditor editable="true" value="{data>code}"/>
						</Panel>
					</l:SplitPane>
					<l:SplitPane>
						<Panel height="100%">
							<headerToolbar>
								<Toolbar>
									<Title text="Backtest"/>
									<ToolbarSpacer />
									<Button icon="sap-icon://add" press=".onAddBacktestPress"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="backtests"
									items="{
										model: 'data',
										path: 'Backtests'
									}"
									itemPress=".onBacktestPress"
									inset="false">
									<columns>
										<Column>
											<Text text="Symbol"/>
										</Column>
										<Column>
											<Text text="Period"/>
										</Column>
										<Column>
											<Text text="Duration"/>
										</Column>
										<Column>
											<Text text="Initial price"/>
										</Column>
										<Column>
											<Text text="Final price"/>
										</Column>
										<Column>
											<Text text="Initial balance"/>
										</Column>
										<Column>
											<Text text="Final balance"/>
										</Column>
										<Column>
											<Text text="Price change"/>
										</Column>
										<Column>
											<Text text="Profit"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{data>asset}{data>currency}"/>
												<Text text="{data>period}"/>
												<Text text="{data>duration}"/>
												<ObjectNumber number="{data>priceInitial}"/>
												<ObjectNumber number="{data>priceFinal}"/>
												<ObjectNumber number="{data>balanceInitial}"/>
												<ObjectNumber number="{data>balanceFinal}"/>
												<ObjectNumber number="{data>priceChange}"/>
												<ObjectNumber number="{data>balanceChange}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</content>
						</Panel>
					</l:SplitPane>
				</l:PaneContainer>
			</l:ResponsiveSplitter>
		</content>
	</Page>
</mvc:View>
