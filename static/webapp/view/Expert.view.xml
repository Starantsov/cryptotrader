<mvc:View controllerName="fokin.crypto.controller.Expert"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:tnt="sap.tnt"
	xmlns="sap.m"
	height="100%">
	<Page>
		<customHeader>
			<Toolbar>
				<Button
					icon="sap-icon://nav-back" press=".onNavBack"/>
				<ToolbarSpacer/>
				<Title text="Expert"/>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://refresh" press=".refresh"/>
			</Toolbar>
		</customHeader>
		<content>
			<form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout">
        <form:content>
          <Label text="Currency"/>
          <Input value="{view>/currency}" change=".onCurrencyChange"/>
          <Label text="Asset"/>
          <Input value="{view>/asset}" change=".onAssetChange"/>
          <Label text="Period"/>
          <Input value="{view>/period}" change=".onPeriodChange"/>
          <Label text="Advice"/>
					<tnt:InfoLabel text="{= ${data>advice} === '1' ? 'buy' : (${data>advice} === '-1' ? 'sell' : 'hold')}"
						colorScheme="{= ${data>advice} === 1 ? 8 : (${data>advice} === -1 ? 3 : 9)}"
						displayOnly="true"/>
          <Label text="Last candle time"/>
          <Text text="{data>lastCandleTime}"/>
        </form:content>
      </form:SimpleForm>
		</content>
	</Page>
</mvc:View>
