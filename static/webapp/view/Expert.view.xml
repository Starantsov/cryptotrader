<mvc:View controllerName="fokin.crypto.controller.Expert"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:tnt="sap.tnt"
	xmlns="sap.m"
	height="100%">
	<Page>
		<customHeader>
			<Toolbar>
				<Button
					icon="sap-icon://nav-back" press=".onNavBack"/>
				<ToolbarSpacer/>
				<Title text="Expert"/>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://refresh" press=".refresh"/>
			</Toolbar>
		</customHeader>
		<content>
			<form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout">
        <form:content>
          <Label text="Currency"/>
          <Text text="{data>History/currency}"/>
          <Label text="Asset"/>
          <Text text="{data>History/asset}"/>
          <Label text="Period"/>
          <Text text="{data>History/period}"/>
          <Label text="Strategy"/>
          <Text text="{data>Strategy/name}"/>
          <Label text="Advice"/>
					<Text text="{= ${data>advice} === '1' ? 'Buy' : (${data>advice} === '-1' ? 'Sell' : 'Hold')}"/>
          <Label text="Last"/>
          <Text text="{data>History/end}"/>
        </form:content>
      </form:SimpleForm>
		</content>
	</Page>
</mvc:View>
